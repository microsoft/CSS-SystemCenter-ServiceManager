							</File>
							<File>
								<Name>SCSM.Support.Tools.RunScriptFromResource.Params.ps1</Name>
								<!-- set the variables here accordingly -->
								<Contents>
$scriptMPName =      'SCSM.Support.Tools.HealthStatus.Monitoring'
